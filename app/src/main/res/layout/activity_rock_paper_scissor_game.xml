<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RockPaperScissorGameActivity">

    <TextView
        android:id="@+id/player_choice"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/computer_choice"
        android:layout_width="105dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/player_choice"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/winner"
        android:layout_width="103dp"
        android:layout_height="32dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/computer_choice"
        tools:layout_editor_absoluteX="25dp" />

    <Button
        android:id="@+id/rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:onClick="onRockButtonClicked"
        android:text="@string/rock"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="268dp" />

    <Button
        android:id="@+id/paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:onClick="onPaperButtonClicked"
        android:text="@string/paper"
        app:layout_constraintStart_toEndOf="@+id/rock"
        tools:layout_editor_absoluteY="268dp" />

    <Button
        android:id="@+id/scissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="28dp"
        android:onClick="onScissorsButtonClicked"
        android:text="@string/scissors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/paper"
        tools:layout_editor_absoluteY="268dp" />
</android.support.constraint.ConstraintLayout>